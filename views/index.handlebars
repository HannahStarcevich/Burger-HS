<h1>Burgers!</h1>

<div id="burgersReady">
    <h2>Burgers ready to eat!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>{{this.burger_name}}</li>
        <button class="change-devour" data-htmlid="{{id}}" data-hello="{{devoured}}">DEVOUR!</button>
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div id="addBurgerForm">
    <h2>Add a Burger</h2>
    <img src="/assets/burger.jpg">
    <form class="create-form">

        <div class="form-group">
            <label for="burgerId">Burger Name:</label>
            <input type="text" id="burgerId" name="burger_name">
        </div>

        <div class="form-group">
            <label for="devoured">Devour it?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Ready to Eat
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>


<div id="burgersEaten">
    <h2>Burgers that you've devoured!</h2>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{this.burger_name}}</li>
        {{/if}}
        {{/each}}
    </ul>
</div>