<div class="container">
    <div class="row">
        <div class="col-sm-5" id="addBurgerForm">
            <h1>Eat-Da-Burger</h1>
            <h4>Add a Burger</h4>
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerId">Burger Name:</label>
                    <input type="text" id="burgerId" name="burger_name" class="form-control" id="floatingInput">
                </div>
                <div class="form-group">
                    <label for="devoured">Burger Status:</label><br>
                    <input type="radio" name="devoured" value="0" checked> Ready to Eat<br>
                    <input type="radio" name="devoured" value="1"> Devoured!

                </div>
                <button type="submit" class="btn btn-success">Add Burger</button>
            </form>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6" id="burgersReady">
                        <h4>Burgers ready to eat</h4>
                        <ul>
                            {{#each burgers}}
                            {{#unless devoured}}
                            <li>{{this.burger_name}}</li>
                            <button class="change-devour btn btn-success" data-id="{{id}}"
                                data-devoured="{{devoured}}">DEVOUR!</button>
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                    <div class="col-sm-6" id="burgersEaten">
                        <h4>Burgers that you've devoured</h4>
                        <ul>
                            {{#each burgers}}
                            {{#if devoured}}
                            <li>{{this.burger_name}}</li>
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-7">
            <img src="/assets/css/burger.png" class="img-fluid" alt="burger">
        </div>
    </div>
</div>

</div>